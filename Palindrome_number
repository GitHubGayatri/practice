package first_java_package;

public class Palindrome_number {

	public static void main(String[] args) {
	
		
		int a,b,c = 0,temp;
		a = 126;
		
		temp = a;
		
		while (a>0) {
			b = a % 10;
		c = (c*10) + b;
		a = a/10; 
		}
		
		if(temp == c)
		
		System.out.println("Palindrome number");
		else 
			System.out.println("Not a palindrome number");
				
				
		
	}

}
